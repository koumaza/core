{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2019",
		"declaration": true,
		"emitDeclarationOnly": true,
		"types": [
			"svelte",
		],
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"@svelte-material-ui-test/core/*": [
				"./*"
			]
		}
	},
	"include": [
		"index.ts",
		"packages/**/*"
	],
	"exclude": [
		"**/node_modules/**/*",
	]
}